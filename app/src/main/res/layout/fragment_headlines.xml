<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="ui.headlines.HeadlinesFragment">

    <data>

        <variable
                name="viewModel"
                type="com.ahmedtikiwa.mynewsapp.ui.headlines.HeadlinesViewModel" />
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <ProgressBar
                android:id="@+id/article_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:goneIfNotNull="@{viewModel.headlinesList}" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/headline_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:clipToPadding="false"
                android:focusable="true"
                tools:listitem="@layout/headline_item" />

    </RelativeLayout>

</layout>
